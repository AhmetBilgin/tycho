	<groupId>tycho-its-project.target.restriction.filter</groupId>
	<artifactId>trf.testbundle</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>eclipse-test-plugin</packaging>

	<properties>
		<!-- overridden from test class -->
		<e342-repo>http://download.eclipse.org/releases/ganymede</e342-repo>
		<e352-repo>http://download.eclipse.org/releases/galileo</e352-repo>
	</properties>

	<repositories>
		<repository>
			<id>e342</id>
			<layout>p2</layout>
			<url>${e342-repo}</url>
		</repository>
		<repository>
			<id>e352</id>
			<layout>p2</layout>
			<url>${e352-repo}</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<filters>
						<filter>
							<!-- for testing purposes with surrounding whitespace -->
							<type> p2-installable-unit </type>
							<id> org.eclipse.osgi </id>
							<restrictTo>
								<version>
									3.4.3.R34x_v20081215-1030
								</version>
							</restrictTo>
						</filter>
						
